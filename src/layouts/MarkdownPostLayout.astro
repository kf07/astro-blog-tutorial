---
import BaseLayout from './BaseLayout.astro';
import TagList from "../components/TagList.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
<h1 transition:name={frontmatter.title} class="title">{frontmatter.title}</h1>
<p>投稿日: {frontmatter.pubDate.toString().slice(0,10)}</p>
<p><em>{frontmatter.description}</em></p>
<p>著者: {frontmatter.author}</p>
<img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} loading="lazy" />
<TagList postTags={frontmatter.tags} />
<slot />
</BaseLayout>

<style>
	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
	}
</style>