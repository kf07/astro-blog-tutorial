---
import Tag from "./Tag.astro"
interface Props {
	postTags?: string[]
}

const allPosts = await Astro.glob('../pages/posts/*.md');
const { postTags } = Astro.props;
const allTags: string[] = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
const tagList = postTags || allTags;
---
<ul class="tags">
	{tagList .map((tag) => (
		<Tag tag={tag} />

))}
</ul>

<style>
	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
	}
</style>