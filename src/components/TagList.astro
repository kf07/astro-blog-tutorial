---
const allPosts = await Astro.glob('../pages/posts/*.md');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---
<ul class="tags">
	{tags.map((tag) => (
			<li class="tag"><a href={`/tags/${tag}`}>{tag}</a></li>
))}
</ul>

<style>
	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
		a {
			display: block;
			padding: 5px 15px;
			font-size: 14px;
		}
	}
	.tag {
		border: dotted 1px #a1a1a1;
		border-radius: 10px;
		font-size: 1.15em;
	}
</style>