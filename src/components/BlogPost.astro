---
const { url, title, date } = Astro.props;
---

<li>
	<a href={url}>
		<h2 class="title" transition:name={title}>{title}</h2>
		<p class="date">{date.toString().slice(0,10)}</p>
	</a>
</li>

<style>
	li {
		border: 1px solid #CCC;
	}
	a {
		display: block;
		padding: 10px;
	}
	.title {
		font-size: 18px;
	}
	.date {
		font-size: 14px;
		margin: 0;
		text-align: right;
	}
</style>